set -v
# Use rpath (relative path) to embed the location of the shared library 
# in the executable.  This is self contained and is much better than 
# using LD_LIBRARY_PATH

cd mylib
gcc -shared -o libf1.so f1.c


# use -Wl to pass information directly to the linker (ld)
cd ../src
gcc f_main.c f2.c f3.c -Wl,-rpath=../mylib -L../mylib -lf1 -o f.exe
f.exe



