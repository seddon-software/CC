CC := clang
WARNINGS := -Wall
CFLAGS := -g -O0 $(WARNINGS) -std=c11 -pthread 
SOURCES := $(wildcard *.c)
OBJECTS := $(SOURCES:.c=.o)


print:
	@echo SOURCES= $(SOURCES)
	@echo OBJECTS= $(OBJECTS)
	@ls -l

all: $(OBJECTS)

$(OBJECTS): %.o: %.c
	@echo $(CC) -c $(CFLAGS) $<
	$(CC) -c $(CFLAGS) $<
	ls

clean:
	rm -f *.exe
	rm -r *.exe.dSYM
	
