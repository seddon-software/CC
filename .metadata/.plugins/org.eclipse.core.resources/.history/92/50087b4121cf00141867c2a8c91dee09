#ifndef SPREADSHEET_H
#define SPREADSHEET_H

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

/********* definitions *************/
/*
#define FILLED  1
#define EMPTY   0
#define MAX     9
#define N       6
*/
enum { FILLED = 1, EMPTY = 0, MAX = 9, N = 6 };

struct cell
{
    char        name[N+1];
    short       row;
    short       col;
    struct cell *next;
    struct cell *prev;
};

typedef struct cell  Cell;
typedef struct cell* CellPtr;

int GetNextChar(void);


#endif
