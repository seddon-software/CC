////////////////////////////////////////////////////////////
//
//      Microsoft Unicode macros
//
////////////////////////////////////////////////////////////

#include <wchar.h>
#include <stdio.h>

#define _UNICODE

int main()
{
    wchar_t name[] = L"Glasgow Rangers";
    wchar_t team[50];

    wprintf(L"Name:   %s\n", name);
    wprintf(L"Length: %i\n", wclen(name));

    wcscpy(team, name);
    wcscat(team, L" F.C.");
    wprintf(L"Team:   %s\n", team);

    wcslwr(team);
    wprintf(L"team:   %s\n", team);

    wcsupr(team);
    wprintf((L"TEAM:   %s\n", team);
}
