////////////////////////////////////////////////////////////
//
//      Unicode to Ansi conversions
//
////////////////////////////////////////////////////////////

#include <string.h>
#include <stdio.h>
#include <stdlib.h>


int main()
{
    wchar_t unicode[] = L"Glasgow Rangers";
    char ansi[50];

    wcstombs(ansi, unicode, wcslen(unicode));
    printf("Ansi:    %s\n", ansi);

    mbstowcs(unicode, ansi, strlen(ansi));
    printf("Unicode: %S\n", unicode);
}
