CC := gcc
WARNINGS := -Wall
CFLAGS := -g -O0 $(WARNINGS) -std=c11 -pthread 
F_SOURCES := $(wildcard f*.c)
G_SOURCES := $(wildcard g*.c)
F_OBJECTS := $(F_SOURCES:.c=.o)
G_OBJECTS := $(G_SOURCES:.c=.o)


all: f.exe g.exe
	@echo $(F_OBJECTS)
	@echo $(G_OBJECTS)
	
f.exe: $(F_OBJECTS)
	@echo $(CC) $(CFLAGS) $< -o $@
	$(CC) $(CFLAGS) $< -o $@

g.exe: $(G_OBJECTS)
	@echo $(CC) $(CFLAGS) $< -o $@
	$(CC) $(CFLAGS) $< -o $@

$(F_OBJECTS): f%.o: f%.c
	@echo $(CC) $(CFLAGS) $< -c $@
	$(CC) $(CFLAGS) -c $<

$(F_OBJECTS): g%.o: g%.c
	@echo $(CC) $(CFLAGS) $< -c $@
	$(CC) $(CFLAGS) -c $<


clean:
	rm -f *.exe
	rm -r *.exe.dSYM
	
	
