CC := gcc
WARNINGS := -Wall
CFLAGS := -g -O0 $(WARNINGS) -std=c11 -pthread 
SOURCES := $(wildcard *.c)
OBJECTS := $(SOURCES:.c=.o)


all: Trees.exe
	echo $(SOURCES)

Trees.exe: $(OBJECTS)
	$(CC) $(CFLAGS) $< -o $@ $(LFLAGS)

$(OBJECTS): %.o: %.c
	$(CC) $(CPFLAGS) -c $<
	
$(OBJECTS): %.c: %.obj: 
	$(CC) $(CFLAGS) $<


clean:
	rm -f *.exe
	rm -r *.exe.dSYM
	
