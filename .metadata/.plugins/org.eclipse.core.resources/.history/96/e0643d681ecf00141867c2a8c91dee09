#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ncurses.h>

/********* definitions *************/

#define FILLED  1
#define EMPTY   0
#define MAX     9
#define N       6

struct cell
{
    char        name[N+1];
    short       row;
    short       col;
    struct cell *next;
    struct cell *prev;
};

typedef struct cell  Cell;
typedef struct cell* CellPtr;

